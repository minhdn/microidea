<Page
    x:Class="MicroIdeas.Splash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MicroIdeas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Canvas Background="#ffffff">
        <Image x:Name="SplashScreenImage"
            Source="Assets/SplashScreen.png"
            Width="620"
            Height="300"
            Visibility="Collapsed"/>
        <ProgressRing x:Name="ProgressRing" Foreground="SlateGray" HorizontalAlignment="Center" IsActive="True" 
                      MaxHeight="30" MinHeight="30" MaxWidth="30" 
                      MinWidth="30"/>
    </Canvas>
</Page>